{
  "version": 2,
  "env": {
    "HASURA_ADMIN_SECRET": "@hasura_admin_secret",
    "HASURA_URL": "@hasura_url"
  },
  "build": {
    "env": {
      "HASURA_ADMIN_SECRET": "@hasura_admin_secret",
      "HASURA_URL": "@hasura_url"
    }
  },
  "builds": [
    {
      "src": "packages/frontend/next.config.js",
      "use": "@now/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/console/(.*)",
      "destination": "api.need-mask.com/api/console/$1"
    },
    {
      "source": "/api/v1/graphql/(.*)",
      "destination": "api.need-mask.com/v1/graphql/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/frontend/$1"
    }
  ]
}
